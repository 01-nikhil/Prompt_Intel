{
    "manifest_version": 3,
    "name": "Prompt Intel",
    "version": "1.0.0",
    "description": "Analyze, score, and refine your AI prompts before sending them to LLMs.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "panel.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "commands": {
        "improve-prompt": {
            "suggested_key": {
                "default": "Ctrl+I",
                "mac": "Command+I"
            },
            "description": "Improve selected prompt"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        },
        "default_title": "Prompt Intel"
    }
}